<mah:MetroWindow
        x:Class="BusanRestaurantApp.Views.BusanMatjibView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors" 
        xmlns:local="clr-namespace:BusanRestaurantApp.Views"
        mc:Ignorable="d"
        Title="BUSAN RESTAURANT GOAT" Height="580" Width="1000"
        Dialog:DialogParticipation.Register="{Binding}"
        FocusManager.FocusedElement="{Binding}">
    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <iconPacks:PackIconFontAwesome Kind="UtensilsSolid" Margin="10,7,0,0" Foreground="White" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- UI 컨트롤 구성 -->
        <!-- 타이틀 영역 -->
        <Label Grid.Row="0" Grid.Column="0" Content="부산 맛집 정보" FontSize="20" FontWeight="Bold"/>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <TextBlock Text="페이지 번호" Margin="5,3" VerticalAlignment="Center" FontWeight="Bold"/>
            <mah:NumericUpDown Minimum="1" Margin="5,3" Value="{Binding PageNo, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="결과 수" Margin="5,3" VerticalAlignment="Center" FontWeight="Bold" />
            <mah:NumericUpDown Minimum="10" Margin="5,3" Value="{Binding NumOfRows}"/>
            <Button Content="검색" Margin="5,3"
                    Style="{StaticResource MahApps.Styles.Button.Square.Accent}"
                    Command="{Binding GetDataFromOpenAPICommand}">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Kind="Magnify" Margin="5,5,5,5" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding}" Margin="5" />
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </StackPanel>

        <!-- 데이터그리드 영역 -->
        <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="10,5"
                  AutoGenerateColumns="False"
                  SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True"
                  Style="{StaticResource MahApps.Styles.DataGrid.Azure}"
                  ItemsSource="{Binding BusanItems}"
                  SelectedItem="{Binding SelectedIndividualItem}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding ShowDetailsCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <DataGrid.Columns>
                <DataGridTextColumn Header="순번" FontWeight="Bold" Binding="{Binding Uc_Seq}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="TextAlignment" Value="Right" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="대표이미지"  Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Main_Img_Thumb}" Stretch="UniformToFill" 
                   Width="65" Height="50"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="식당명" FontWeight="SemiBold" Binding="{Binding Main_Title}" />
                <DataGridTextColumn Header="구/군" Binding="{Binding Gugun_Nm}" />
                <DataGridTemplateColumn Header="상세주소" Width="220">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Addr1}" TextWrapping="Wrap" MaxWidth="220" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--<DataGridTextColumn Header="상세주소" Binding="{Binding Addr1}" />-->
                <DataGridTextColumn Header="전화번호" Binding="{Binding Cntct_Tel}" />
                <!--<DataGridTextColumn Header="홈페이지" Binding="{Binding Homepage_Url}" />-->
                <!--<DataGridTextColumn Header="대표메뉴" FontWeight="SemiBold" Binding="{Binding Rprsntv_Menu}" />-->
                <DataGridTemplateColumn Header="대표메뉴">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Rprsntv_Menu}"
                                       TextTrimming="CharacterEllipsis"
                                       MaxWidth="150"
                                       ToolTip="{Binding Rprsntv_Menu}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
            </DataGrid.Columns>
        </DataGrid>


        <!-- 상태표시줄 영역 -->
        <StatusBar Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="-10">
            <StatusBarItem Content="데이터포털 API 활용앱" Margin="10,0" />
            <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
            <StatusBarItem Content="{Binding SearchResult}" />

            <StatusBarItem Content="{Binding CurrDateTime}" HorizontalAlignment="Right" Margin="0,0,10,0" />
        </StatusBar>
    </Grid>
</mah:MetroWindow>
