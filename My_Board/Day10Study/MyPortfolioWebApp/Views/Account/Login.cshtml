@model MyPortfolioWebApp.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<section id="login" class="section">
    <div class="container section-title text-center" data-aos="fade-up">
        <h2 class="fw-bold">로그인</h2>
        <p class="text-muted">가입하신 이메일과 비밀번호로 로그인해 주세요.</p>
    </div>

    <div class="container py-5" data-aos="fade-up" data-aos-delay="100">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="text-center text-primary fw-bold mb-4">
                            <i class="bi bi-box-arrow-in-right me-2"></i>로그인
                        </h3>

                        <form asp-action="Login">
                            <div asp-validation-summary="All" class="text-danger mb-3"></div>

                            <div class="form-group mb-3">
                                <label asp-for="Email" class="form-label">이메일</label>
                                <input asp-for="Email" class="form-control form-control-lg" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="Password" class="form-label">패스워드</label>
                                <input asp-for="Password" class="form-control form-control-lg" />
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <button type="submit" class="btn btn-success w-100 py-2 fs-5 fw-bold">
                                <i class="bi bi-door-open-fill me-2"></i>로그인
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
